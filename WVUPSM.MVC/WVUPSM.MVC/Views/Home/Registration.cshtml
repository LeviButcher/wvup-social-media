@model RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<header class="section section-alt">
    <h1>Registration</h1>
</header>

<section class="section">
    <article class="registration-form">
        <form asp-controller="Home" asp-action="Registration" method="post" class="form">
            <div>
                <header>
                    <h3>Profile</h3>
                </header>
                <p>Email has to be unique, UserName can be whatever you want</p>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input asp-for="UserName" class="form-control" />
                </div>
            </div>
            <div>
                <header>
                    <h3>Account Security</h3>
                </header>
                <p>Password must have a upper and lower case letter, a digit, and a non-alpanumeric character. Passwords must be at least 6 characters long</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Submit" />
        </form>
    </article>
</section>