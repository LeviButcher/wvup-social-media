@model List<InboxMessageViewModel>

@{
    ViewData["Title"] = "My Inbox";
}

<section class="section">
    <header>
        <h1>Messages</h1>
    </header>
    <section>
        @if (Model.Count > 0)
        {
            foreach (var message in Model)
            {
                <article class="message">
                    <a asp-action="@message.UserId">
                        <header>
                            <h2>@message.UserName</h2>
                        </header>
                        <p>
                            @message.LastMessage
                        </p>
                    </a>
                </article>
            }
        }
        else
        {
            <h3>No messages</h3>
        }
    </section>
</section>