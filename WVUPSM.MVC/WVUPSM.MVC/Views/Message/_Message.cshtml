@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager

@model MessageViewModel
@*Have to set the UserId before calling this PartialView in the controller*@
@if (UserManager.GetUserId(User) == Model.SenderId)
{
    <article class="message message-reciever">
        <header>
            <h2>@Model.SenderUserName</h2>
        </header>
        <p>
            @Model.Text
        </p>
    </article>
}
else
{
    <article class="message">
        <header>
            <h2>@Model.SenderUserName</h2>
        </header>
        <p>
            @Model.Text
        </p>
    </article>
}

