@model UserPost

@{
    ViewData["Title"] = "post" + Model.DateCreated;
}

<section>
    <article class="post">
        <header class="post-header">    
            <h3>@Model.UserName</h3>
            <h4>@Model.DateCreated</h4>
        </header>
        <div>
            <p>
                @Model.Text
            </p>
        </div>
    </article>
    <form asp-controller="Post" asp-action="Delete" method="post" asp-route-postId="@Model.PostId" class="form">
        <input type="submit" value="Delete"/>
    </form>
</section>
