@using Microsoft.AspNetCore.Identity
@model List<GroupViewModel>

@inject UserManager<User> UserManager

<section class="section group-container list" data-currUserId="@UserManager.GetUserId(User)" data-userId="@ViewData["user-id"]">
    @if (Model.Count() != 0)
    {
        @foreach (GroupViewModel group in Model)
        {
            <article>
                <header>
                    <h3><a asp-action="Index" asp-controller="Group" asp-route-groupId="@group.GroupId">@group.GroupName</a></h3>
                    <h5>@group.Bio</h5>
                </header>
                @if (UserManager.GetUserId(User) != group.OwnerId)
                {
                    <div>
                        <div class="spinner" style="margin: auto">
                            <a data-userId="@UserManager.GetUserId(User)" data-joinId="@group.GroupId" data-type="Group"></a>
                        </div>
                    </div>
                }
            </article>
        }
    }
    else
    {
        <h2>Nothing to be seen here</h2>
    }
</section>
<script>
    window.onload = () => {
        const main = document.querySelector('main');
        const groupContainer = document.querySelector('.group-container');
        let userId = groupContainer.dataset.userid;
        let action = "Group/Users"
        const startSkip = 20;
        const startTake = 10;
        scrollLoader(main, groupContainer, renderGroup, `${action}/${userId}`, startSkip, startTake);
    };

    function renderGroup(data) {
        //Add attachment to this markup
        const groupContainer = document.querySelector('.group-container');
        const currUser = groupContainer.dataset.curruser;
        let spinner = "";
        if (data.ownerid !== currUser) {
            spinner = `<div>
                        <div class="spinner" style="margin: auto">
                            <a class="" data-userId="${messageList.dataset.curruser}" data-joinId="${data.followid}"></a>
                        </div>
                    </div>`;
        }

        return `
        <article>
            <header>
                <h3><a asp-action="Index" asp-controller="Group" asp-route-groupId="${data.groupId}">${data.groupName}</a></h3>
                <h5>${data.bio}</h5>
            </header>
            ${spinner} 
        </article>
        `;
    }
</script>
