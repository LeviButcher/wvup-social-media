@using Microsoft.AspNetCore.Identity
@model List<UserProfile>

@inject UserManager<User> UserManager

<section class="section list user-container" data-currUser="@UserManager.GetUserId(User)" data-userId="@ViewData["user-id"]" data-action="@ViewData["action"]">
    @if (Model.Count() != 0)
    {
        @foreach (UserProfile user in Model)
        {
            <article>
                <header>
                    <h3><a asp-action="Index" asp-controller="User" asp-route-userId="@user.UserId">@user.UserName</a></h3>
                    <h5>@user.Email</h5>
                </header>
                @if (UserManager.GetUserId(User) != user.UserId)
                {
                    <div>
                        <div class="spinner" style="margin: auto">
                            <a data-userId="@UserManager.GetUserId(User)" data-joinId="@user.UserId" data-type="Follow"></a>
                        </div>
                    </div>
                }
            </article>
        }
    }
    else
    {
        <h2>Nothing to be seen here</h2>
    }
</section>
<script>
    window.onload = () => {
        const main = document.querySelector('main');
        const userContainer = document.querySelector('.user-container');
        let userId = userContainer.dataset.userid;
        let action = userContainer.dataset.action;
        const startSkip = 10;
        const startTake = 10;
        scrollLoader(main, userContainer, renderGroup, `${action}/${userId}`, startSkip, startTake);
    };

    function renderGroup(data) {
        console.log(data);
        //Add attachment to this markup
        const userContainer = document.querySelector('.user-container');
        const currUser = userContainer.dataset.curruser;
        let spinner = "";
        if (data.userId !== currUser) {
            spinner = `<div>
                        <div class="spinner" style="margin: auto">
                            <a data-userId="${currUser}" data-joinId="${data.userId}" data-type="Follow"></a>
                        </div>
                    </div>`;
        }

        return `
        <article>
                <header>
                    <h3><a href="User/Index/${data.userId}">${data.userName}</a></h3>
                    <h5>${data.email}</h5>
                </header>
            ${spinner}
        </article>
        `;
    }
</script>
