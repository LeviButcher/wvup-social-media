@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore;
@using WVUPSM.Models.Entities;



@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Home" asp-action="Logout" id="logoutForm"
          method="post">
        <ul class="top-nav-right">
            <li><a asp-controller="User" asp-action="Index" asp-route-userId="@UserManager.GetUserId(User)">@User.Identity.Name</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
        </ul>
    </form>
}
else
{
    <ul>
        <li><a id="loginLink" asp-action="Login">Log in</a></li>
    </ul>
}