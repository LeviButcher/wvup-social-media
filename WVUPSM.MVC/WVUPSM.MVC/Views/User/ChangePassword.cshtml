@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<header class="section section-alt">
    <h1>Change Password</h1>
</header>
<section class="section">
    <article class="change-password">
        <form asp-controller="User" asp-action="ChangePassword" method="post" class="form">
            <div>
                <header>
                    <h3>Account Security</h3>
                </header>
                <p>Password must have a upper and lower case letter, a digit, and a non-alpanumeric character. Passwords must be at least 6 characters long</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (ViewData["success"] != null)
                {
                <h3 class="highlight">@ViewData["success"]</h3>
                }
                <div class="form-group">
                    <label asp-for="CurrentPassword" class="control-label">Current Password</label>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    <input asp-for="CurrentPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label">New Password</label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <input asp-for="NewPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Confirm New Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Submit" />
            @Html.HiddenFor(x => x.UserId)
        </form>
    </article>
</section>
